<div class="container">
  
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= render 'shared/errors'%>
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Description" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-info"%>
        </div>
      <% end %>
    
      <%= link_to '[ Cancel and return Back ]', articles_path %>
    </div>
  </div>
</div>